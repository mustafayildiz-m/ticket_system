    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Tickets</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Contacts</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="row">

                        <!--                        loop-->
                        {{#each tickets}}
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="time-label">
                                        <span class="bg-cyan">{{generateDate date 'DD/MM/YYYY'}}</span>

                                        <span class="bg-red">{{generateDate date 'HH:MM:SS'}}</span>
                                    </div>

                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>{{name}}</b></h2>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                    <li class="small"><span class="fa-li"></span> {{content}}
                                                    </li>

                                                </ul>
                                            </div>
                                            <div class="col-5 text-center">
                                                <a href="{{img}}"
                                                   data-toggle="lightbox" data-title="{{name}}"
                                                   data-gallery="gallery">
                                                    <img src={{img}} class="img-fluid mb-2" alt="photo" />
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <a href="/posts/closed-ticket/{{_id}}"
                                               class="btn btn-sm bg-danger">
                                                Ticket close
                                            </a>
                                                <a href="/posts/readed-ticked/{{_id}}"
                                                   class="btn btn-sm bg-teal">
                                                    okudum
                                                </a>

                                            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal"
                                                    data-target="#modal-lg-{{_id}}">
                                                yanıtla
                                            </button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="modal-lg-{{_id}}">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Yanıt</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/answered_tickets/answer-ticket/{{_id}}" method="POST" enctype="multipart/form-data">

                                                <div class="form-group">
                                                    <label for="inputMessage">Message</label>
                                                    <textarea id="inputMessage" name="content" class="form-control"
                                                              rows="4">
                                                    </textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputSubject">İmage</label>
                                                    <input type="file" name="post_image"  class="form-control"/>
                                                </div>

                                                <div class="modal-footer justify-content-between">

                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                        Kapat
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">Güncelle</button>
                                                </div>

                                            </form>
                                        </div>

                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>

                        {{/each}}
                        <!--                        loop-->
                    </div>
                </div>
                <!-- /.card-body -->

                <!-- /.card-footer -->
            </div>
            <!-- /.card -->

